<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="4"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="4"
                android:entries="@array/genders" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:textSize="25sp"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p_zero"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <SeekBar
                android:id="@+id/skBar_temperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="5"
                android:layout_gravity="center"
                android:layout_weight="15"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/p_five"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frequency"
            android:textSize="25sp"
            android:layout_marginBottom="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p_zero"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <SeekBar
                android:id="@+id/skBar_vibration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="10"
                android:layout_gravity="center"
                android:layout_weight="15"
                android:progress="5"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/p_ten"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/modes"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/tests"/>

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textSize="23sp"
                android:layout_weight="1"
                android:backgroundTint="@color/warning_red"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/btn_set"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set"
                android:textSize="23sp"
                android:backgroundTint="@color/dodgerBlue"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/monitor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/control_panel"
        app:layout_constraintBottom_toBottomOf="parent">


        <ProgressBar
            android:id="@+id/timer"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="8"
            android:progress="0"
            android:padding="20dp" />

        <TextView
            android:id="@+id/monitor_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/round"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/monitor_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/temperature"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/monitor_ring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/ring"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/monitor_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/node"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/run"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/dodgerBlue"
        app:layout_constraintTop_toBottomOf="@id/monitor"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
